<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:weightSum="10"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:background="#0A146E"
        android:layout_weight="2"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="10"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:padding="17dp"
                android:src="@drawable/icon_user"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:text="Converter"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_height="match_parent"/>
            <ImageView
                android:padding="17dp"
                android:src="@drawable/icon_ring"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ProgressBar
                android:padding="15dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_centerHorizontal="true"
                android:indeterminate="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:progress="40"
                android:progressDrawable="@drawable/circle_update"
                android:max="100" />
            <TextView
                android:layout_weight="6"
                android:layout_width="0dp"
                android:text="Updated: Jun 28, 2019 11:05AM"
                android:gravity="center|left"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/shape_4"
                android:layout_weight="2"
                android:text="Edit"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:layout_width="0dp"
                android:drawableRight="@drawable/icon_list"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shape"
        android:orientation="horizontal"
        android:weightSum="10">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/icon_usa"
                android:padding="10dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:weightSum="2"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="USD"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"
                android:text="USD Dolar"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <EditText
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:paddingRight="20dp"
                android:gravity="right"
                android:text="$1000"
                android:layout_weight="1.25"
                android:inputType="number"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorWhite"
                android:layout_height="0dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_weight="1.25"
                android:src="@drawable/icon_calculator"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/shape_2"
            android:layout_weight="7"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.5"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:text="$0.8783"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <TextView
                    android:layout_weight="1"
                    android:text="1EUR = 1.1386 USD"
                    android:textSize="15dp"
                    android:gravity="end"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_3"
            android:layout_weight="3"
            android:weightSum="2"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <ImageView
                android:layout_weight="1"
                android:src="@drawable/icon_graphic"
                android:padding="15dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:padding="15dp"
                android:src="@drawable/icon_ring"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:background="#0A146E"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:padding="20dp"
            android:layout_weight="1"
            android:src="@drawable/icon_coin"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:padding="20dp"
            android:src="@drawable/icon_graphic"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:padding="20dp"
            android:src="@drawable/icon_send"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:padding="20dp"
            android:src="@drawable/icon_percent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:padding="20dp"
            android:src="@drawable/icon_more"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>